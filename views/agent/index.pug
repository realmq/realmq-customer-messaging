html
  head
    title Agent Chat - Customer Messaging - RealMQ Example Application
    style.
      body {
        padding: 0;
        margin: 3rem auto;
        max-width: 920px;
      }

      body::after {
        content: "";
        background: url(/img/backdrop.svg) no-repeat center center fixed;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
        opacity: 0.8;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        position: absolute;
        z-index: -1;
      }
  body
    div#app(data-auth-token=authToken)

script(src='/js/agent.js')
link(href='/js/agent.css' rel='stylesheet')
